@model Slider

<h2>Edit Slider</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="PlantName"></label>
        <input asp-for="PlantName" class="form-control" />
        <span asp-validation-for="PlantName" class="text-danger"></span>
       
    </div>

    <div class="form-group">
        <label asp-for="Desc"></label>
        <textarea asp-for="Desc" class="form-control"></textarea>
        <span asp-validation-for="Desc" class="text-danger"></span>
   
    </div>

  
    <div class="form-group">
        <label asp-for="Order"></label>
        <input asp-for="Order" class="form-control" />
        <span asp-validation-for="Order" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" accept="image/*" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
